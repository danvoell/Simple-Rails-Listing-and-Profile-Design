<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <div class="brand"><a href="/">Lists and Profiles</a></div>
      <ul class="nav">
        <li><a href="#">About</a></li>
      </ul>
    </div>
  </div>
</div>

<div class="container">

<div class="row">
  <div class="span10">

<%- model_class = Post -%>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><h4>Find your favorite post</h4>
</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
<%= image_tag post.image_url(:thumb) if post.image? %>
      
      <div class="title">
       <%= link_to post.title, post_path(post) %>
<div class="date"><%= post.created_at.strftime("%B %d, %Y") %>   [<%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_post_path(post), :class => 'text' %> |
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      post_path(post),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'text' %>]

</div>
     </div>
        <div class="description"> Description: <%= post.description %></div>
        <div class="tags">Tags: <%= post.subheading %></div>
        
        
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="span2">
<table class="table table-bordered">

 <tr>
      <th><h5>Create a <%= link_to t('.new', :default => t("helpers.links.new")),
            new_post_path,
            :class => 'btn btn-success' %> post</h5>
</th>


</table>
</div>

</div>



</div>


