<div class="register">
<div class="signup">Signup Today</div><br>
  <%= form_for(resource, :as => resource_name,
                         :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

 
    <p><%= f.text_field :email, :placeholder => 'email' %></p>


  <%= f.text_field :username, :placeholder => 'username' %>


    <p><%= f.password_field :password, :placeholder => 'password' %></p>


    <p><%= f.password_field :password_confirmation, :placeholder => 'password confirm' %></p>

    <p><%= f.submit "Sign Up", :class => 'btn btn-success' %></p>
    <%= render :partial => "devise/shared/links" %>
  <% end %>
</div>

